<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.ifnot.ax">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".StubActivity">
            <intent-filter>
                <action android:name="cc.ifnot.ax.Stub" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.ServerService"
            android:exported="true"
            android:externalService="true"
            android:isolatedProcess="true"
            android:process="service.server" />
        <service
            android:name=".service.ClientService"
            android:process="service.client" />
        <service android:name=".service.WindowService" />

        <provider
            android:name=".FakeProvider"
            android:authorities="cc.ifnot.ax.provider_fake"
            android:exported="false" />
    </application>

</manifest>